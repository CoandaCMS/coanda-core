{
    "name": "coandacms/coanda-core",
    "description": "The core package for Coanda CMS",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Dover",
            "email": "me@alexdover.co.uk"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "4.1.*",
        "illuminate/database": "4.1.*",
        "intervention/image": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "dev-master@dev"        
    },
    "autoload": {
        "classmap": [
            "src/migrations",
            "src/controllers",
            "tests/unit/BaseTest.php"
        ],
        "psr-0": {
            "CoandaCMS\\Coanda\\": "src/"
        }
    },
    "minimum-stability": "stable"
}
